

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}
enum Difficulty {
  EASY
  MEDIUM
  HARD
}
model User {
  id String @id @default(uuid())
  name String
  email String @unique
  image String?
  role UserRole @default(USER)
  password String
  createdAt DateTime @default(now())
  updatredAt DateTime @updatedAt

  problems problem[]
}
model problem {
  id String @id @default(uuid())
  title String
  description String
  difficulty Difficulty
  tags String[]
  userId String
  example Json
  constraints String
  hints String?
  editorial String?
  testcases String
  codeSnippet String
  referenceSolutions String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  //realtionships
  user User @relation(fields: [userId], references: [id],onDelete: Cascade)
}